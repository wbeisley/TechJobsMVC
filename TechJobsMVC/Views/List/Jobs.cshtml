

<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //TODO #1: Use a loop to display job results in a table.
        @foreach (var item in ViewBag.jobs)
        {
            <table class="job-listing">
                <tr>
                    <td>ID: @item.Id</td>
                </tr>
                <tr>
                    <td>Name: @item.Name</td>
                </tr>
                <tr>
                    <td>Employer: @item.Employer</td>
                </tr>
                <tr>
                    <td>Location: @item.Location</td>
                </tr>
                <tr>
                    <td>Position Type: @item.PositionType</td>
                </tr>
                <tr>
                    <td>Skill: @item.CoreCompetency</td>
                </tr>
                
            </table>
        }
    }

</div>